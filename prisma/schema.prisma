generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model song {
  id          String   @id @default(cuid())
  title       String
  artist      String
  category    String
  filePath    String
  lyricsPath  String?
  staticLyrics String?
  createdAt   DateTime @default(now())
}